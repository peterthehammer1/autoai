{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/regenerate-slots",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/send-reminders",
      "schedule": "0 14 * * 1-5"
    },
    {
      "path": "/api/cron/service-reminders",
      "schedule": "0 15 * * 1"
    },
    {
      "path": "/api/cron/send-review-requests",
      "schedule": "0 23 * * 1-5"
    },
    {
      "path": "/api/cron/marketing-campaigns",
      "schedule": "0 15 * * 1-5"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
